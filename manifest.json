{
  "manifest_version": 3,
  "name": "Volume Boost",
  "version": "0.1.0",
  "description": "Boost and control the active tab's audio volume.",
  "action": {
    "default_title": "Volume Boost",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
