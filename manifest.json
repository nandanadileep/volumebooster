{
  "manifest_version": 3,
  "name": "Volume Boost",
  "version": "0.1.0",
  "description": "Per-tab audio boost with clarity controls.",
  "action": {
    "default_title": "Volume Boost",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ml/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle_speech_focus": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle Speech Focus"
    },
    "toggle_mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle Mute"
    },
    "boost_up": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "Command+Shift+Up"
      },
      "description": "Increase Boost"
    },
    "boost_down": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "Command+Shift+Down"
      },
      "description": "Decrease Boost"
    },
    "reset_boost": {
      "suggested_key": {
        "default": "Ctrl+Shift+0",
        "mac": "Command+Shift+0"
      },
      "description": "Reset Boost"
    }
  }
}
