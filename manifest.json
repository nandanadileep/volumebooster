{
  "manifest_version": 3,
  "name": "Volume Boost",
  "version": "0.1.0",
  "description": "Per-tab audio boost with clarity controls.",
  "action": {
    "default_title": "Volume Boost",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ml/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
